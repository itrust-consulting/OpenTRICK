				<group depends-on="firstInstallation" name="firstInstallationAddUser" />
				<group depends-on="firstInstallation" name="firstInstallationAddCustomer" />
			</dependencies>
		</groups>
		<packages>
			<package name="lu.itrust.TS.ui.*" />
		</packages>
	</test>

