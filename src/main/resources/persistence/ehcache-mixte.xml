<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' 
        xmlns='http://www.ehcache.org/v3' 
        xmlns:jsr107='http://www.ehcache.org/v3/jsr107'
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.9.xsd
                            http://www.ehcache.org/v3/jsr107 http://www.ehcache.org/schema/ehcache-107-ext-3.9.xsd">

  <service>
    <jsr107:defaults 
        default-template="defaultCache" 
        enable-management="true" 
        enable-statistics="true"
        jmx-domain="app.ehcache.mixed"/>
  </service>

  <persistence directory="${app.settings.level.cache}" />

  <!-- Optimized Thread Pool -->
  <thread-pools>
    <thread-pool alias="pool-disk" min="4" max="8"/>
  </thread-pools>

  <!-- Shared Disk Settings -->
  <cache-template name="diskSettingsTemplate">
    <disk-store-settings thread-pool="pool-disk" writer-concurrency="8" disk-segments="32"/>
  </cache-template>

  <!-- Base Template -->
  <cache-template name="defaultCache" extends="diskSettingsTemplate">
    <expiry>
      <ttl unit="days">60</ttl>
    </expiry>
    <heap unit="entries">5000</heap>
  </cache-template>

  <!-- Entity Template -->
  <cache-template name="entityDefaultCache" extends="diskSettingsTemplate">
    <expiry>
      <ttl unit="days">60</ttl>
    </expiry>
    <resources>
      <heap unit="entries">8000</heap> <!-- Reduced from 10000 -->
      <disk persistent="true" unit="MB">100</disk> <!-- Increased storage -->
      <offheap unit="MB">256</offheap> <!-- Added off-heap -->
    </resources>
    <heap-store-settings>
      <max-object-graph-size>250000</max-object-graph-size>
      <max-object-size unit="MB">25</max-object-size>
    </heap-store-settings>
  </cache-template>

  <!-- Collection Template -->
  <cache-template name="collectionDefaultCache" extends="diskSettingsTemplate">
    <expiry>
      <ttl unit="days">30</ttl>
    </expiry>
    <resources>
      <heap unit="entries">10000</heap> <!-- Reduced from 15000 -->
      <disk persistent="true" unit="MB">100</disk>
      <offheap unit="MB">128</offheap>
    </resources>
    <heap-store-settings>
      <max-object-graph-size>500000</max-object-graph-size>
      <max-object-size unit="MB">100</max-object-size> <!-- Increased size limit -->
    </heap-store-settings>
  </cache-template>

  <!-- Force Disk Template -->
  <cache-template name="forceDiskdefaultCache" extends="diskSettingsTemplate">
    <expiry>
      <ttl unit="days">90</ttl>
    </expiry>
    <resources>
      <disk persistent="true" unit="GB">2</disk> <!-- Increased + persistent -->
    </resources>
  </cache-template>

  <!-- Region Definitions -->
  <cache alias="default-update-timestamps-region" uses-template="defaultCache" />
  
  <cache alias="default-query-results-region" uses-template="defaultCache">
    <expiry>
      <tti unit="seconds">180</tti>
    </expiry>
    <loader-writer>
      <class>com.app.QueryCacheLoader</class> <!-- Custom loader -->
    </loader-writer>
  </cache>

  <!-- Entity Mappings -->
  <cache alias="lu.itrust.business.ts.model.general.TSSetting" uses-template="defaultCache" />
  
  <!-- Force Disk Entities -->
  <cache alias="lu.itrust.business.ts.model.general.document.impl.WordReport" uses-template="forceDiskdefaultCache" />
  <cache alias="lu.itrust.business.ts.model.general.document.impl.UserSQLite" uses-template="forceDiskdefaultCache" />
  <cache alias="lu.itrust.business.ts.model.general.document.impl.ReportTemplate" uses-template="forceDiskdefaultCache" />
  <cache alias="lu.itrust.business.ts.model.general.Customer.templates" uses-template="forceDiskdefaultCache" />
  
