	<build>
		<finalName>trickservice</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>3.0</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<suiteXmlFiles>
						<suiteXmlFile>src/test/resources/scenarios/Controller.xml</suiteXmlFile>
					</suiteXmlFiles>
				</configuration>
			</plugin>
			<!-- <plugin> <groupId>org.docx4j</groupId> <artifactId>docx4j</artifactId> <version>2.8.0</version> </plugin> -->

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<warSourceExcludes>
						**/WEB-INF/css/main.css,
						**/WEB-INF/css/datepicker.css,
						**/WEB-INF/css/select2-bootstrap.css,
						**/WEB-INF/js/main.js,
						**/WEB-INF/js/dom-parser.js,
						**/WEB-INF/js/jquery.fileDownload.js,
						**/WEB-INF/js/trickservice/*.js,
						**/WEB-INF/js/highcharts/themes/*.js,
						**/WEB-INF/js/bootstrap/bootbox.js,
						**/WEB-INF/js/bootstrap/bootstrap-tooltip.js,
						**/WEB-INF/js/bootstrap/bootstrap-datepicker.js.js
						**/WEB-INF/js/bootstrap/locales/*.js,
						**/WEB-INF/js/bootstrap/stickyTableHeaders.js,
						**/WEB-INF/js/bootstrap/typeahead.bundle.js
					</warSourceExcludes>
					<packagingExcludes>**/WEB-INF/tmp/*_admin*</packagingExcludes>
				</configuration>
			</plugin>

			<plugin>
				<groupId>com.samaxes.maven</groupId>
				<artifactId>minify-maven-plugin</artifactId>
				<version>1.7.4</version>
				<executions>
					<execution>
						<id>minify-default</id>
						<phase>process-resources</phase>
						<goals>
							<goal>minify</goal>
						</goals>
						<configuration>
							<charset>utf-8</charset>
							<jsEngine>CLOSURE</jsEngine>
							<skipMerge>true</skipMerge>
							<nosuffix>true</nosuffix>

							<cssSourceDir>WEB-INF/css</cssSourceDir>

							<cssSourceIncludes>
								<cssSourceInclude>*.css</cssSourceInclude>
							</cssSourceIncludes>

							<cssSourceExcludes>
								<cssSourceExclude>WEB-INF/css/*.min.css</cssSourceExclude>
							</cssSourceExcludes>

							<jsSourceDir>WEB-INF/js</jsSourceDir>

							<jsSourceExcludes>
								<jsSourceExclude>WEB-INF/js/*.min.js</jsSourceExclude>
							</jsSourceExcludes>
							<jsSourceIncludes>
								<jsSourceInclude>*.js</jsSourceInclude>
							</jsSourceIncludes>
						</configuration>
					</execution>
					<execution>
						<id>minify-js-trickservie</id>
						<phase>process-resources</phase>
						<goals>
							<goal>minify</goal>
						</goals>
						<configuration>
							<charset>utf-8</charset>
							<jsEngine>CLOSURE</jsEngine>
							<skipMerge>true</skipMerge>
							<nosuffix>true</nosuffix>

							<jsSourceDir>WEB-INF/js/trickservice</jsSourceDir>

							<jsSourceIncludes>
								<jsSourceInclude>*.js</jsSourceInclude>
							</jsSourceIncludes>

							<jsSourceExcludes>
								<jsSourceExclude>WEB-INF/js/trickservice/*.min.js</jsSourceExclude>
							</jsSourceExcludes>
						</configuration>
					</execution>

					<execution>
						<id>minify-js-bootstrap</id>
						<phase>process-resources</phase>
						<goals>
							<goal>minify</goal>
						</goals>
						<configuration>
							<charset>utf-8</charset>
							<jsEngine>CLOSURE</jsEngine>
							<skipMerge>true</skipMerge>
							<nosuffix>true</nosuffix>

							<jsSourceDir>WEB-INF/js/bootstrap</jsSourceDir>

							<jsSourceIncludes>
								<jsSourceInclude>*.js</jsSourceInclude>
							</jsSourceIncludes>

							<jsSourceExcludes>
								<jsSourceExclude>WEB-INF/js/bootstrap/*.min.js</jsSourceExclude>
							</jsSourceExcludes>

						</configuration>
					</execution>

					<execution>
						<id>minify-js-bootstrap-locales</id>
						<phase>process-resources</phase>
						<goals>
							<goal>minify</goal>
						</goals>
						<configuration>
							<charset>utf-8</charset>
							<jsEngine>CLOSURE</jsEngine>
							<skipMerge>true</skipMerge>
							<nosuffix>true</nosuffix>

							<jsSourceDir>WEB-INF/js/bootstrap/locales</jsSourceDir>

							<jsSourceIncludes>
								<jsSourceInclude>*.js</jsSourceInclude>
							</jsSourceIncludes>

							<jsSourceExcludes>
								<jsSourceExclude>WEB-INF/js/bootstrap/locales/*.min.js</jsSourceExclude>
							</jsSourceExcludes>

						</configuration>
					</execution>

					<execution>
						<id>minify-js-highcharts-theme</id>
						<phase>process-resources</phase>
						<goals>
							<goal>minify</goal>
						</goals>
						<configuration>
							<charset>utf-8</charset>
							<jsEngine>CLOSURE</jsEngine>
							<skipMerge>true</skipMerge>
							<nosuffix>true</nosuffix>

							<jsSourceDir>WEB-INF/js/highcharts/themes</jsSourceDir>

							<jsSourceIncludes>
								<jsSourceInclude>*.js</jsSourceInclude>
							</jsSourceIncludes>

							<jsSourceExcludes>
								<jsSourceExclude>WEB-INF/js/highcharts/themes/*.min.js</jsSourceExclude>
							</jsSourceExcludes>

						</configuration>
					</execution>

				</executions>
			</plugin>

		</plugins>
	</build>

